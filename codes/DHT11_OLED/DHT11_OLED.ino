    display.setTextSize(2);
    display.setCursor(15,10);
 }
 else if(temp < 10 && temp >= 0){  
  display.setTextSize(3);
  display.setCursor(25,6);
 }

 else
 {
    display.setTextSize(3);   
    display.setCursor(10,6);
 }

  display.print(temp);  
  display.display();
  
 }
